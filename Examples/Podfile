source 'https://github.com/CocoaPods/Specs.git'
source 'https://github.com/bitmovin/cocoapod-specs.git'

pod 'BitmovinPlayer', '2.51.0'

target 'BitmovinAnalyticsCollector-Example-iOS' do
    use_frameworks!
    platform :ios, '9.0'
    pod 'BitmovinAnalyticsCollector', :path => '../BitmovinAnalyticsCollector.v2.podspec'
    pod 'GoogleAds-IMA-iOS-SDK', '3.11.1'
end

target 'BitmovinAnalyticsCollector-Example-tvOS' do
    use_frameworks!
    platform :tvos
    pod 'BitmovinAnalyticsCollector', :path => '../BitmovinAnalyticsCollector.v2.podspec'
end

target 'BitmovinAnalyticsCollector-Tests-iOS' do
    use_frameworks!
    platform :ios, '9.0'
    pod 'BitmovinAnalyticsCollector', :path => '../BitmovinAnalyticsCollector.v2.podspec', :testspecs => ['CoreTests', 'BitmovinPlayerTests']
end